{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "ru.dom.smart",
  "version": "1.2.0",
  "platforms": [
    "local"
  ],
  "compatibility": ">=12.1.0",
  "sdk": 3,
  "brandColor": "#ff312c",
  "name": {
    "en": "Dom.ru",
    "ru": "Дом.ру"
  },
  "description": {
    "en": "Home security starts at the entrance",
    "ru": "Безопасность дома начинается с входа"
  },
  "category": [
    "security"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/small.jpg",
    "large": "/assets/images/large.jpg",
    "xlarge": "/assets/images/xlarge.jpg"
  },
  "support": "mailto:tolls.gospel-0w@icloud.com",
  "author": {
    "name": "Alexey Krainev",
    "email": "tolls.gospel-0w@icloud.com"
  },
  "source": "https://github.com/kraineff/homey-domru",
  "bugs": {
    "url": "https://github.com/kraineff/homey-domru/issues"
  },
  "flow": {
    "triggers": [
      {
        "id": "invite_received",
        "highlight": true,
        "title": {
          "en": "Incoming call",
          "ru": "Поступил звонок"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=access"
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "class": "lock",
      "platforms": [
        "local"
      ],
      "connectivity": [
        "cloud"
      ],
      "name": {
        "en": "Access Control",
        "ru": "Контроль доступа"
      },
      "images": {
        "small": "/drivers/access/assets/images/small.jpg",
        "large": "/drivers/access/assets/images/large.jpg"
      },
      "capabilities": [
        "locked"
      ],
      "capabilitiesOptions": {
        "locked": {
          "uiQuickAction": true
        }
      },
      "pair": [
        {
          "id": "list_accounts"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "id": "access",
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "General",
            "ru": "Основные"
          },
          "children": [
            {
              "id": "open_duration",
              "type": "number",
              "label": {
                "en": "Open Duration",
                "ru": "Длительность открытия"
              },
              "units": {
                "en": "seconds",
                "ru": "секунды"
              },
              "min": 1,
              "value": 5
            }
          ]
        }
      ]
    },
    {
      "class": "camera",
      "platforms": [
        "local"
      ],
      "connectivity": [
        "cloud"
      ],
      "name": {
        "en": "External Camera",
        "ru": "Внешняя камера"
      },
      "images": {
        "small": "/drivers/camera_external/assets/images/small.jpg",
        "large": "/drivers/camera_external/assets/images/large.jpg"
      },
      "capabilities": [],
      "capabilitiesOptions": {},
      "pair": [
        {
          "id": "list_accounts"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "id": "camera_external"
    }
  ]
}